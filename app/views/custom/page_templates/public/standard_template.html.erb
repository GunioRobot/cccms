<div class="article">
  <h2><%= @page.title %></h2>
  <h3><%= date_for_page @page %>, <%= @page.user.try(:login) %></h3>
  <hr class="subtitle" />
  <p><%= headline_image %></p>
  <p><em><%= @page.abstract %></em></p>
  <%= aggregate?(@page.body) %>
</div>

<p><%= will_paginate(@content_collection) if @content_collection %></p>